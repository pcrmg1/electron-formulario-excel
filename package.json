{
  "name": "electron-formulario-excel",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.mjs",
  "homepage": "https://app.socialboost.es",
  "author": {
    "email": "agenciaautomatizaciones@gmail.com",
    "name": "Socialboost"
  },
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.socialboost.editores",
    "productName": "Socialboost - Editores",
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "maintainer": "agenciaautomatizaciones@gmail.com",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@tailwindcss/vite": "^4.1.7",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^4.21.2",
    "ffmpeg": "^0.0.4",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.4",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.7",
    "xlsx": "^0.18.5",
    "zod": "^3.25.25"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
